{
  "manifest_version": 3,
  "name": "SoundCloud AutoPlay",
  "version": "1.0.0",
  "description": "Auto-play SoundCloud tracks with shuffle and repeat",
  "update_url": "https://raw.githubusercontent.com/yeucodonvn/codejs/master/soundcloud-extension/updates.xml",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://soundcloud.com/*","https://*.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://soundcloud.com/*"],
      "js": ["soundcloud-script.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": ["https://*.google.com/*"],
      "js": ["google.js"],
      "run_at": "document_idle"
    }
  ]
}
